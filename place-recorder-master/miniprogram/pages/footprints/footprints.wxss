/* pages/history/history.wxss */
.page__hd {
  padding: 40rpx;
  background: #fff;
}

.page__title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.page__desc {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.page__desc p {
  margin: 0;
}

/* 加载状态 */
.loading-container {
  padding: 100rpx 0;
  text-align: center;
}

.weui-loadmore {
  display: flex;
  justify-content: center;
  align-items: center;
}

.weui-loading {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #ddd;
  border-left-color: #07C160;
  border-radius: 50%;
  animation: weuiLoading 1s infinite linear;
}

@keyframes weuiLoading {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.weui-loadmore__tips {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.empty-subtext {
  font-size: 28rpx;
  color: #ccc;
  margin-bottom: 60rpx;
}

/* 记录卡片 */
.record-card {
  margin: 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.record-time {
  font-size: 26rpx;
  color: #999;
}

.record-content {
  
}

.record-address {
  margin-bottom: 24rpx;
}

.address-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.address-text {
  font-size: 28rpx;
  color: #333;
}

.record-image {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.checkin-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.record-no-image {
  padding: 40rpx;
  text-align: center;
  background: #f8f8f8;
  border-radius: 12rpx;
  color: #999;
  font-size: 28rpx;
}