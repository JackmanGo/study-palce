/* 页面样式 */
.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  text-align: center;
  padding: 40rpx 0;
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

/* 表单组样式 */
.form-group {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.03);
}

.label {
  display: block;
  font-size: 32rpx;
  margin-bottom: 20rpx;
  color: #333;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 8rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.textarea {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 8rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.word-count {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 上传区域样式 */
.uploader-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.uploader-title {
  font-size: 32rpx;
  color: #333;
}

.uploader__files {
  display: flex;
  flex-wrap: wrap;
}

.uploader__file {
  position: relative;
  margin: 0 20rpx 20rpx 0;
  width: 200rpx;
  height: 200rpx;
}

.uploader__img {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.uploader__delete {
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 40rpx;
  height: 40rpx;
  background: #ff5c5c;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 36rpx;
}

.uploader__input-box {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #e5e5e5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.uploader__input {
  text-align: center;
}

.uploader__input .icon {
  font-size: 60rpx;
  color: #ccc;
  display: block;
}

.uploader__text {
  font-size: 24rpx;
  color: #999;
}

/* 按钮区域 */
.btn-area {
  margin-top: 60rpx;
  padding: 0 30rpx;
}

.submit-btn {
  background-color: #07C160;
  border-radius: 50rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 34rpx;
}

.submit-btn[disabled] {
  background-color: #9ad6af;
}